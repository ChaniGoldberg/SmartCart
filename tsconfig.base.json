{
  "files": [],
  "references": [
    { "path": "packages/shared" },
    { "path": "packages/backend" },
    { "path": "packages/frontend" }
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@smartcart/shared": ["packages/shared/src/index.ts"],
      "@smartcart/shared/*": ["packages/shared/src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}